<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/orderhub_drawer"
	android:background="@color/toolbarPrimary"
	android:fitsSystemWindows="true" >

	<!-- Content -->
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    <include layout="@layout/toolbar"/>
		<FrameLayout
    		android:id="@+id/content_container"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent" />
	
	</LinearLayout>
	

	<!-- Drawer -->
	<RelativeLayout
        android:id="@+id/options_drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="-26dp"
        android:choiceMode="singleChoice"
        android:fitsSystemWindows="true"
        android:background="@color/drawerBackground"
        android:orientation="vertical">
        <!-- Est Name -->
        <LinearLayout
            android:id="@+id/drawer_top"
        	android:layout_width="match_parent"
    		android:layout_height="150dp"
    		android:layout_marginTop="0dp"
    		android:layout_alignParentTop="true"
    		android:background="@drawable/corn"
    		android:orientation="horizontal">
        	<TextView
            	android:id="@+id/est_name"
            	android:layout_height="match_parent"
            	android:layout_width="match_parent"
            	android:gravity="center_vertical"
            	android:textStyle="bold"
            	android:textColor="#ff000000"
            	android:textSize="20sp"
            	android:paddingLeft="10dp"
            	android:paddingRight="10dp" />
        </LinearLayout>
        <!-- Orders -->
        <LinearLayout
            android:id="@+id/orders_drawer"
            android:layout_below="@+id/drawer_top"
            android:layout_above="@+id/settings_drawer"
        	android:layout_height="wrap_content"
    		android:layout_width="match_parent"
    		android:orientation="vertical">
        	<ExpandableListView
                android:id="@+id/orders_listview"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
            	android:choiceMode="singleChoice"/>
        	<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:orientation="horizontal"
				android:background="#fff0f0f0"/>
        	<TextView
        	    android:id="@+id/contacts_drawer"
            	android:layout_height="75dp"
            	android:layout_width="match_parent"
            	android:layout_gravity="center_vertical"
            	android:drawablePadding="5dp"
            	android:gravity="center_vertical"
            	android:textStyle="bold"
            	android:textColor="#ff000000"
            	android:visibility="gone" />
        	<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:orientation="horizontal"
				android:background="#fff0f0f0"
				android:visibility="gone" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/settings_drawer"
            android:layout_alignParentBottom="true"
        	android:layout_height="wrap_content"
    		android:layout_width="match_parent"
    		android:layout_gravity="center"
    		android:orientation="vertical">
        	<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:orientation="horizontal"
				android:background="#fff0f0f0"/>
        	<TextView
            	android:layout_height="75dp"
            	android:layout_width="wrap_content"
            	android:layout_gravity="center_vertical"
            	android:gravity="center_vertical"
            	android:drawableLeft="@drawable/ic_action_settings"
            	android:drawablePadding="5dp"
            	android:paddingLeft="10dp"
    			android:paddingRight="10dp"
            	android:textStyle="bold"
            	android:textColor="#ff000000"/>
        </LinearLayout>
	</RelativeLayout>
</android.support.v4.widget.DrawerLayout>