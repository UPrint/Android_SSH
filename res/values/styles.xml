<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Special style used to simultaneously style both the Action Bar, and the TAB bar -->
	<style name="Theme.SSH" parent="AppBaseTheme">
    	<item name="colorPrimary">@color/toolbarPrimary</item>
    	<item name="colorAccent">@color/toolbarAccent</item>
    	<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowTranslucentStatus">true</item>
    	<item name="android:navigationBarColor">@color/toolbarPrimary</item>
    	<item name="android:colorPrimary">@color/toolbarPrimary</item>
    	<item name="android:colorPrimaryDark">@color/toolbarPrimary</item>
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>
	
	<style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
	    <item name="android:textSize">17sp</item>
	</style>

</resources>